/*首页温度&天气的样式*/
.weather-wrapper {
  /*上边距*/
  padding-top: 174rpx;
  /*下边距*/
  padding-bottom: 250rpx;
  /*相对定位*/
  position: relative;
}
/*首页底图的样式*/
.weather-bg{
  /*绝对定位*/
  position: absolute;
  /*绘制上部开始位置*/
  top: 0;
  /*绘制左边开始位置*/
  left: 0;
  /*视图宽度*/
  width: 100%;
  /*视图高度*/
  height: 100%;
  /*堆叠顺序 放兄弟视图底部*/
  z-index: -1;
}
/*首页温度的样式*/
.temp {
  /*对齐方式*/
  text-align: center;
  /*字体大小*/
  font-size: 200rpx;
  /*字体行高*/
  line-height: 280rpx;
  /*透明度*/
  opacity: 0.8;
}
/*首页天气的样式*/
.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

/*未来24小时天气的样式*/
.timetips {
  /*显示框类型*/
  display: flex;
  /*横方向对齐*/
  justify-content: center;
  /*居中对齐*/
  align-items: center;
  /*右(外)边距*/
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}
/*24小时左边图标*/
.timetips-icon{
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}
/*未来24小时天气文本的样式*/
.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
/*并列视图的样式*/
.forecast-list{
  display: flex;
}
/*并列项目的样式*/
.forecast-item{
  display: flex;
  /*项目方向(横)*/
  flex-direction: column;
  /*项目不压缩显示*/
  flex-shrink: 0;
  width: 120rpx;
  font-size: 36rpx;
  line-height: 42rpx;
}
