/*列表的样式*/
.date-item{
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

/*星期的样式*/
.day{
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}

/*日期的样式*/
.date{
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}

/*温度的样式*/
.temp{
  flex-grow: 1;
  padding-right: center;
  text-align: center;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}

/*温度图标的样式*/
.weather-icon{
  width: 90rpx;
  height: 90rpx;
}
